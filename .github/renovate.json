{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/Stockholm",
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "semanticCommitScope": "{{parentDir}}",
  "postUpgradeTasks": {
    "commands": [
      "sed -i \"s/^version:.*/version: $(grep '^version:' Chart.yaml | awk '{print $2}' | awk -F '[.\"]' '{$NF = $NF + 1;} 1' | sed 's/ /./g')/\" Chart.yaml"
    ],
    "fileFilters": [
      "Chart.yaml"
    ],
    "executionMode": "branch"
  },
  "packageRules": [
    {
      "datasources": [
        "helm"
      ],
      "addLabels": [
        "helm"
      ]
    },
    {
      "datasources": [
        "docker"
      ],
      "addLabels": [
        "docker"
      ],
      "separateMinorPatch": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "bumpVersion": "major",
      "schedule": [
        "after 5am and before 8am every 3 months on the first day of the month"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "bumpVersion": "minor",
      "schedule": [
        "after 5am and before 8am every saturday"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "bumpVersion": "patch"
    }
  ]
}
